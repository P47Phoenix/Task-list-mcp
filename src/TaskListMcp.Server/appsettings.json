{
  "TaskListMcp": {
    "Database": {
      "ConnectionString": "Data Source=tasklist.db",
      "CreateIfNotExists": true,
      "EnableForeignKeys": true
    },
    "Server": {
      "Name": "TaskList MCP Server",
      "Version": "1.0.0",
      "MaxTasksPerQuery": 100,
      "MaxListDepth": 5
    },
    "Features": {
      "EnableTemplates": true,
      "EnableCustomAttributes": true,
      "EnableHierarchicalTags": true,
      "EnableTaskDependencies": true,
      "EnableAnalytics": false
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
