{
  "TaskListMcp": {
    "Database": {
      "ConnectionString": "Data Source=:memory:",
      "EnableForeignKeys": true,
      "EnableWAL": false
    },
    "Server": {
      "Port": 8080,
      "Host": "localhost"
    },
    "Features": {
      "EnableAdvancedSearch": true,
      "EnableTemplates": true,
      "EnableTags": true,
      "EnableAttributes": true,
      "MaxListDepth": 10,
      "MaxTasksPerList": 1000
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "TaskListMcp": "Debug"
    }
  }
}
